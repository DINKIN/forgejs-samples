{
    "story":
    {
        "uid": "hotspots-story",
        "name": "Hotspots Story",
        "slug": "hotspots-story",
        "description": "This is sample of hotspots",
        "default": "scene-0",

        "scenes":
        [
            {
                "uid": "scene-0",
                "name": "First scene",
                "slug": "first-scene",
                "description": "This is the first and only scene",
                "background": "#202040",

                "media":
                {
                    "uid": "media-0",
                    "type": "grid",

                    "options":
                    {
                        "color": "#7F7FFF"
                    }
                },

                "camera":
                {
                    "fov":
                    {
                        "min": 30,
                        "max": 120
                    },

                    "parallax": 0.5
                },

                "hotspots":
                [
                    {
                        "uid": "hotspot-dom-one",
                        "interactive": false,
                        "type": "dom",

                        "dom":
                        {
                            "id": "hotspot-one",
                            "class": "hotspot-round",
                            "width": 120,
                            "height": 60,
                            "index": 20
                        },

                        "events":
                        {
                            "onClick": "click-action",
                            "onOver": "over-action",
                            "onOut": "out-action"
                        },

                        "transform":
                        {
                            "position": {
                                "x": 10,
                                "y": 10,
                                "z": 30
                            }
                        }
                    },

                    {
                        "uid": "hotspot-dom-two",
                        "interactive": false,
                        "type": "dom",

                        "dom":
                        {
                            "id": "hotspot-two",
                            "class": [ "scale-animation", "hotspot-round" ],
                            "width": 60,
                            "height": 60,
                            "index": 20
                        },

                        "transform":
                        {
                            "position": {
                                "x": -10,
                                "y": 10,
                                "z": 30
                            }
                        }
                    },

                    {
                        "uid": "hotspot-dom-three",
                        "interactive": false,
                        "type": "dom",

                        "dom":
                        {
                            "id": "hotspot-three",
                            "class": "scale-animation",
                            "width": 100,
                            "height": 100,
                            "color": "blue",
                            "index": 20
                        },

                        "transform":
                        {
                            "position": {
                                "x": 0,
                                "y": 0,
                                "z": 30
                            }
                        }
                    },

                    {
                        "uid": "hotspot-dom-outside-hotspot",
                        "interactive": false,
                        "type": "dom",

                        "dom":
                        {
                            "id": "outside-hotspot",
                            "width": 560,
                            "height": 315,
                            "index": 10
                        },

                        "transform":
                        {
                            "position": {
                                "x": 10,
                                "y": 0,
                                "z": 10
                            }
                        }
                    }
                ]
            }
        ]
    },

    "actions":
    [
        {
            "uid": "click-action",
            "target": "console",
            "method":
            {
                "name": "log",
                "args": ["click"]
            }
        },

        {
            "uid": "over-action",
            "target": "console",
            "method":
            {
                "name": "log",
                "args": ["over"]
            }
        },

        {
            "uid": "out-action",
            "target": "console",
            "method":
            {
                "name": "log",
                "args": ["out"]
            }
        }
    ]
