    "tour":
    {
        "uid": "playlist-tour",
        "name": "Audio Playlists Tour",
        "slug": "playlist-tour",
        "description": "This is a demonstration of audio playlists applied to the scenes",
        "default": "scene-1",

        "scenes":
        [
            {
                "uid": "scene-1",
                "name": "First scene",
                "slug": "first-scene",
                "description": "This is the first scene",

                "media":
                {
                    "uid": "media-1",
                    "type": "image",

                    "source":
                    {
                        "format": "equi",
                        "url": "https://d1gzfej7jd6aeb.cloudfront.net/samples/common/panos/01-forest.jpg"
                    }
                }
            },
            {
                "uid": "scene-2",
                "name": "Second scene",
                "slug": "second-scene",
                "description": "This is the second scene",

                "media":
                {
                    "uid": "media-2",
                    "type": "image",

                    "source":
                    {
                        "format": "equi",
                        "url": "https://d1gzfej7jd6aeb.cloudfront.net/samples/common/panos/02-sand.jpg"
                    }
                },

                "playlists":
                {
                    "default": "playlist-2"
                }
            },
            {
                "uid": "scene-3",
                "name": "Third scene",
                "slug": "third-scene",
                "description": "This is the third and last scene",

                "media":
                {
                    "uid": "media-3",
                    "type": "image",

                    "source":
                    {
                        "format": "equi",
                        "url": "https://d1gzfej7jd6aeb.cloudfront.net/samples/common/panos/03-snow.jpg"
                    }
                },

                "playlists":
                {
                    "default": "playlist-1"
                }
            }
        ]
    },

    "actions":
    [
        {
            "uid": "action-next-track",
            "target": "viewer.playlists",

            "method":
            {
                "name": "nextTrack"
            }
        },

        {
            "uid": "action-prev",
            "target": "viewer.tour",

            "method":
            {
                "name": "previousScene"
            }
        },

        {
            "uid": "action-next",
            "target": "viewer.tour",

            "method":
            {
                "name": "nextScene"
            }
        }
    ],

    "plugins":
    {
        "prefix": "../../plugins/",

        "engines":
        [
            {
                "uid": "com.gopro.simplebutton",
                "url": "SimpleButton/",
                "manifest": "manifest.json"
            }
        ],

        "instances":
        [
            {
                "uid": "simplebutton-previous",
                "engine": "com.gopro.simplebutton",

                "options":
                {
                    "left": 5,
                    "verticalCenter": true,
                    "value": "Previous"
                },

                "events":
                {
                    "onClick": ["action-prev"]
                }
            },

            {
                "uid": "simplebutton-next",
                "engine": "com.gopro.simplebutton",

                "options":
                {
                    "right": 5,
                    "verticalCenter": true,
                    "value": "Next"
                },

                "events":
                {
                    "onClick": ["action-next"]
                }
            },

            {
                "uid": "simplebutton-next-track",
                "engine": "com.gopro.simplebutton",

                "options":
                {
                    "top": 5,
                    "horizontalCenter": true,
                    "width": 100,
                    "height": 50,
                    "value": "Next track"
                },

                "events":
                {
                    "onClick": ["action-next-track"]
                }
            }
        ]
    }
}