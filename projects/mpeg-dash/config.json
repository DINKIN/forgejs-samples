{
    "history":
    {
        "enabled": true
    },

    "tour":
    {
        "uid": "mpegdash-tour",
        "name": "MPEG-DASH Video Tour",
        "slug": "mpegdash-tour",
        "description": "This is sample of MPEG-DASH video display",
        "default": "scene-0",

        "scenes":
        [
            {
                "uid": "scene-0",
                "name": "First scene",
                "slug": "first-scene",
                "description": "This is the first scene",

                "media":
                {
                    "uid": "video-0",
                    "type": "video",

                    "source":
                    {
                        "format": "equi",
                        "streaming": "dash",
                        "url": "http://streams.kolor.com/streams/ken/samples/common/videos/omni-highlights/dash/411255.mpd"
                    },

                    "options":
                    {
                        "autoPlay": true,
                        "loop": true,
                        "volume": 0.5
                    }
                }
            },

            {
                "uid": "scene-1",
                "name": "Second scene",
                "slug": "second-scene",
                "description": "This is the second scene",
                "background": "#111",

                "plugins":
                {
                    "instances":
                    [
                        {
                            "uid": "simplevideo-mpegdash",
                            "engine": "com.gopro.simplevideo",

                            "options":
                            {
                                "height": "100%",
                                "width": "100%",
                                "horizontalCenter": true,
                                "verticalCenter": true,
                                "autoPlay": true,
                                "loop": true,
                                "volume": 0.5
                            },

                            "data":
                            {
                                "video": "http://streams.kolor.com/streams/ken/samples/common/videos/moto-desert/dash/410524.mpd",
                                "streaming": "dash"
                            },

                            "index": 1,
                            "keep": false
                        }
                    ]
                }
            }
        ]
    },

    "actions":
    [
        {
            "uid": "action-prev",
            "target": "viewer.tour",

            "method":
            {
                "name": "previousScene"
            }
        },

        {
            "uid": "action-next",
            "target": "viewer.tour",

            "method":
            {
                "name": "nextScene"
            }
        }
    ],

    "plugins":
    {
        "prefix": "../../plugins/",

        "engines":
        [
            {
                "uid": "com.gopro.simplebutton",
                "url": "SimpleButton/",
                "manifest": "manifest.json"
            },

            {
                "uid": "com.gopro.simplevideo",
                "url": "SimpleVideo/",
                "manifest": "manifest.json"
            }
        ],

        "instances":
        [
            {
                "uid": "simplebutton-previous",
                "engine": "com.gopro.simplebutton",

                "options":
                {
                    "left": 5,
                    "verticalCenter": true,
                    "value": "Previous"
                },

                "events":
                {
                    "onClick": ["action-prev"]
                },

                "index": 2
            },

            {
                "uid": "simplebutton-next",
                "engine": "com.gopro.simplebutton",

                "options":
                {
                    "right": 5,
                    "verticalCenter": true,
                    "value": "Next"
                },

                "events":
                {
                    "onClick": ["action-next"]
                },

                "index": 2
            }
        ]
    }
}