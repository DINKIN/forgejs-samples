{
    "story":
    {
        "uid": "fx-story",
        "name": "Special Effects Story",
        "slug": "fx-story",
        "description": "This is a demonstration of special effects applied to the background",
        "default": "scene-0",

        "scenes":
        [
            {
                "uid": "scene-0",
                "name": "First scene",
                "slug": "first-scene",
                "description": "This is the first and only scene",
                "fx": ["fx-horizontalblur", "fx-verticalblur", "fx-film", "fx-sepia", "fx-vignette"],

                "media":
                {
                    "uid": "media-0",
                    "type": "image",

                    "source":
                    {
                        "format": "equi",
                        "url": "https://cdn.forgejs.org/samples/common/panos/01-forest.jpg"
                    }
                }
            }
        ]
    },

    "fx":
    {
        "enabled": true
    },

    "actions":
    [
        {
            "uid": "action-toggle-fx",
            "target": "viewer.fxs",

            "property":
            {
                "name": "enabled",
                "operation": "toggle"
            }
        }
    ],

    "plugins":
    {
        "prefix": "../../plugins/",

        "engines":
        [
            {
                "uid": "org.forgejs.simplebutton",
                "url": "SimpleButton/"
            },

            {
                "uid": "org.forgejs.webvrbutton",
                "url": "WebVRButton/"
            },

            {
                "uid": "org.forgejs.gyroscopebutton",
                "url": "GyroscopeButton/"
            },

            {
                "uid": "org.forgejs.fxvignette",
                "url": "FXVignette/"
            },

            {
                "uid": "org.forgejs.fxsepia",
                "url": "FXSepia/"
            },

            {
                "uid": "org.forgejs.fxfilm",
                "url": "FXFilm/"
            },

            {
                "uid": "org.forgejs.fxhorizontalblur",
                "url": "FXHorizontalBlur/"
            },

            {
                "uid": "org.forgejs.fxverticalblur",
                "url": "FXVerticalBlur/"
            }
        ],

        "instances":
        [
            {
                "uid": "simplebutton-fx-enable",
                "engine": "org.forgejs.simplebutton",
                "enabled": true,

                "options":
                {
                    "bottom": 14,
                    "right": 80,
                    "width": 100,
                    "height": 50,
                    "value": "Toggle FX"
                },

                "events":
                {
                    "onClick": ["action-toggle-fx"]
                }
            },

            {
                "uid": "fx-vignette",
                "engine": "org.forgejs.fxvignette",

                "options":
                {
                    "offset": 0.20,
                    "darkness": 25
                }
            },

            {
                "uid": "fx-sepia",
                "engine": "org.forgejs.fxsepia",

                "options":
                {
                    "amount": 0.7
                }
            },

            {
                "uid": "fx-film",
                "engine": "org.forgejs.fxfilm",

                "options":
                {
                    "noiseIntensity": 0.1,
                    "scanIntensity": 0.8,
                    "scanCount": 1024,
                    "grayscale": false
                }
            },

            {
                "uid": "fx-horizontalblur",
                "engine": "org.forgejs.fxhorizontalblur",

                "options":
                {
                    "intensity": 0.0001
                }
            },

            {
                "uid": "fx-verticalblur",
                "engine": "org.forgejs.fxverticalblur",

                "options":
                {
                    "intensity": 0.001
                }
            },

            {
                "uid": "webvrbutton",
                "engine": "org.forgejs.webvrbutton",

                "options":
                {
                    "bottom": 10,
                    "right": 10
                }
            },

            {
                "uid": "gyrobutton",
                "engine": "org.forgejs.gyroscopebutton",

                "options":
                {
                    "bottom": 10,
                    "left": 10
                }
            }
        ]
    }
}