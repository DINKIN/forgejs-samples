{
    "i18n":
    {
        "enabled": true,

        "locales":
        [
            {
                "uid": "en-US",
                "name": "English",
                "files":
                [
                    {
                        "key": "tour.en-US",
                        "url": "./i18n/en-US/locale.json"
                    }
                ]
            },

            {
                "uid": "fr-FR",
                "name": "French",
                "files":
                [
                    {
                        "key": "tour.fr-FR",
                        "url": "./i18n/fr-FR/locale.json"
                    }
                ]
            },

            {
                "uid": "jp-JP",
                "name": "Japanese",
                "files":
                [
                    {
                        "key": "tour.jp-JP",
                        "url": "./i18n/jp-JP/locale.json"
                    }
                ]
            }
        ],

        "default": "en-US"
    },

    "tour":
    {
        "uid": "locales-tour",
        "name": "Multiple Locales Tour",
        "slug": "locales-tour",
        "description": "This is a tour which uses multiple locales",
        "default": "scene-0",

        "scenes":
        [
            {
                "uid": "scene-0",
                "name": "First scene",
                "slug": "first-scene",
                "description": "This is the first and only scene",

                "media":
                {
                    "uid": "scene-0-pano-0",
                    "type": "image",

                    "source":
                    {
                        "format": "equi",
                        "url": "https://d1gzfej7jd6aeb.cloudfront.net/samples/common/panos/01-forest.jpg"
                    }
                }
            }
        ]
    },

    "plugins":
    {
        "prefix": "../../plugins/",

        "engines":
        [
            {
                "uid": "com.gopro.localeselector",
                "url": "LocaleSelector/",
                "manifest": "manifest.json"
            },

            {
                "uid": "com.gopro.simpletext",
                "url": "SimpleText/",
                "manifest": "manifest.json"
            }
        ],

        "instances":
        [
            {
                "uid": "localeselector",
                "engine": "com.gopro.localeselector",

                "options":
                {
                    "horizontalCenter": true,
                    "bottom": 100,
                    "flagWidth": 150,
                    "flagHeight": 100,
                    "baseURL": "https://d1gzfej7jd6aeb.cloudfront.net/samples/common/images/",
                    "fileName": "flag-{{locale}}.gif"
                }
            },

            {
                "uid": "text-welcome",
                "engine": "com.gopro.simpletext",

                "options":
                {
                    "config":
                    {
                        "i18n": true,
                        "value": "pano-welcome",
                        "fontSize": 50,
                        "color": "white",
                        "textAlign": "center"
                    },

                    "horizontalCenter": true,
                    "bottom": 400
                }
            },

            {
                "uid": "text-instructions",
                "engine": "com.gopro.simpletext",

                "options":
                {
                    "config":
                    {
                        "i18n": true,
                        "value": "pano-instructions",
                        "fontSize": 30,
                        "color": "white",
                        "textAlign": "center"
                    },

                    "horizontalCenter": true,
                    "bottom": 350
                }
            }
        ]
    }
}