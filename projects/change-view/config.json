{
    "tour":
    {
        "uid": "view-tour",
        "name": "Change View Tour",
        "slug": "view-tour",
        "description": "This is a demonstration of the view changes",
        "default": "scene-0",

        "scenes":
        [
            {
                "uid": "scene-0",
                "name": "First scene",
                "slug": "first-scene",
                "description": "This is the first and only scene",

                "media":
                {
                    "uid": "media-0",
                    "type": "video",

                    "source":
                    {
                        "format": "equi",
                        "levels": [
                            { "url": "http://streams.kolor.com/streams/ken/samples/common/videos/omni-highlights/source.02-720p_HD.mp4" },
                            { "url": "http://streams.kolor.com/streams/ken/samples/common/videos/omni-highlights/source.03-1080p_HD.mp4" },
                            { "url": "http://streams.kolor.com/streams/ken/samples/common/videos/omni-highlights/source.04-1440p_HD.mp4" },
                            { "url": "http://streams.kolor.com/streams/ken/samples/common/videos/omni-highlights/source.07-2160p_4K_H264_12M.mp4 " }
                        ]
                    },

                    "options":
                    {
                        "autoPlay": true,
                        "loop": true,
                        "volume": 1
                    }
                },

                "view":
                {
                    "type": "GoPro"
                },

                "camera":
                {
                    "pitch":
                    {
                        "default": -90
                    },

                    "fov":
                    {
                        "default": 250
                    }
                }
            }
        ]
    },

    "actions":
    [
        {
            "uid": "action-view-recti",
            "target": "viewer.renderer",

            "property":
            {
                "name": "view",
                "value": "rectilinear"
            }
        },

        {
            "uid": "action-camera-fov-recti",
            "target": "viewer.renderer.camera",

            "method":
            {
                "name": "lookAt",
                "args": [null, 0, null, 90]
            }
        },

        {
            "uid": "action-view-gopro",
            "target": "viewer.renderer",

            "property":
            {
                "name": "view",
                "value": "gopro"
            }
        },

        {
            "uid": "action-camera-fov-gopro",
            "target": "viewer.renderer.camera",

            "method":
            {
                "name": "lookAt",
                "args": [null, -90, null, 250]
            }
        }
    ],

    "plugins":
    {
        "prefix": "../../plugins/",

        "engines":
        [
            {
                "uid": "com.gopro.simplebutton",
                "url": "SimpleButton/",
                "manifest": "manifest.json"
            }
        ],

        "instances":
        [
            {
                "uid": "simplebutton-recti",
                "engine": "com.gopro.simplebutton",
                "enabled": true,

                "options":
                {
                    "left": 5,
                    "verticalCenter": true,
                    "width": 100,
                    "height": 50,
                    "value": "Rectilinear"
                },

                "events":
                {
                    "onClick": ["action-view-recti", "action-camera-fov-recti", "action-camera-pitch-recti"]
                }
            },
            {
                "uid": "simplebutton-planet",
                "engine": "com.gopro.simplebutton",
                "enabled": true,

                "options":
                {
                    "right": 5,
                    "verticalCenter": true,
                    "width": 100,
                    "height": 50,
                    "value": "Little Planet"
                },

                "events":
                {
                    "onClick": ["action-view-gopro", "action-camera-fov-gopro", "action-camera-pitch-gopro"]
                }
            }
        ]
    }
}