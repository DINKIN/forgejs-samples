    "tour":
    {
        "uid": "playlist-tour",
        "name": "Audio Playlists Tour",
        "slug": "playlist-tour",
        "description": "This is a demonstration of audio playlists applied to the scenes",
        "default": "scene-0",

        "scenes": [
        {
            "uid": "scene-1",
            "name": "First scene",
            "slug": "first-scene",
            "description": "This is the first scene",

            "media":
            {
                "uid": "scene-1-pano-0",
                "type": "image",

                "source":
                {
                    "format": "equi",
                    "url": "http://streams.kolor.com/streams/ken/samples/common/panos/01-forest.png"
                }
            },

            "playlists":
            {
                "default": "playlist-0"
            }
        },
        {
            "uid": "scene-2",
            "name": "Second scene",
            "slug": "second-scene",
            "description": "This is the second scene",

            "media":
            {
                "uid": "scene-2-pano-0",
                "type": "image",

                "source":
                {
                    "format": "equi",
                    "url": "http://streams.kolor.com/streams/ken/samples/common/panos/02-sand.png"
                }
            },

            "playlists":
            {
                "default": "playlist-2"
            }
        },
        {
            "uid": "scene-3",
            "name": "Third scene",
            "slug": "third-scene",
            "description": "This is the third and last scene",

            "media":
            {
                "uid": "scene-3-pano-0",
                "type": "image",

                "source":
                {
                    "format": "equi",
                    "url": "http://streams.kolor.com/streams/ken/samples/common/panos/03-snow.png"
                }
            },

            "playlists":
            {
                "default": "playlist-1"
            }
        }]
    },

    "actions": [
        {
            "uid": "action-next-track",
            "target": "viewer.playlists",
            "method":
            {
                "name": "nextTrack"
            }
        },

        {
            "uid": "action-prev",
            "target": "viewer.tour",
            "method":
            {
                "name": "previousScene"
            }
        },

        {
            "uid": "action-next",
            "target": "viewer.tour",
            "method":
            {
                "name": "nextScene"
            }
        }
    ],

    "plugins":
    {
        "prefix": "../../plugins/",

        "engines": [
        {
            "uid": "com.pluginmaker.simplebutton",
            "url": "SimpleButton/",
            "manifest": "manifest.json"
        }],

        "instances": [
            {
                "uid": "simplebutton-previous",
                "engine": "com.pluginmaker.simplebutton",

                "options":
                {
                    "left": 5,
                    "verticalCenter": true,

                    "value": "Previous"
                },

                "events":
                {
                    "onClick": ["action-prev"]
                }
            },

            {
                "uid": "simplebutton-next",
                "engine": "com.pluginmaker.simplebutton",

                "options":
                {
                    "right": 5,
                    "verticalCenter": true,

                    "value": "Next"
                },

                "events":
                {
                    "onClick": ["action-next"]
                }
            },

            {
                "uid": "simplebutton-next-track",
                "engine": "com.pluginmaker.simplebutton",

                "options":
                {
                    "top": 5,
                    "horizontalCenter": true,

                    "width": 100,
                    "height": 50,

                    "value": "Next track"
                },

                "events":
                {
                    "onClick": ["action-next-track"]
                }
            }
        ]
    }
}