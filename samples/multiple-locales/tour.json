{
    "i18n":
    {
        "enabled": true,
        "locales": [

            {
                "name": "en-US",
                "files": [
                {
                    "key": "tour.en-US",
                    "url": "./i18n/en-US/locale.json"
                }]
            },

            {
                "name": "fr-FR",
                "files": [
                {
                    "key": "tour.fr-FR",
                    "url": "./i18n/fr-FR/locale.json"
                }]
            },

            {
                "name": "jp-JP",
                "files": [
                {
                    "key": "tour.jp-JP",
                    "url": "./i18n/jp-JP/locale.json"
                }]
            }
        ],

        "default": "en-US"
    },

    "tour":
    {
        "uid": "locales-tour",
        "name": "Multiple Locales Tour",
        "slug": "locales-tour",
        "description": "This is a tour which uses multiple locales",
        "default": "scene-0",

        "scenes": [
        {
            "uid": "scene-0",
            "name": "First scene",
            "slug": "first-scene",
            "description": "This is the first and only scene",

            "media":
            {
                "uid": "scene-0-pano-0",
                "type": "image",
                "format": "equi",

                "source":
                {
                    "url": "http://d2z3zwtr25q24l.cloudfront.net/data/samples/common/panos/01-forest.png"
                }
            }
        }]
    },

    "plugins":
    {
        "prefix": "../../plugins/",

        "engines": [
        {
            "uid": "com.pluginmaker.localeselector",
            "url": "LocaleSelector/",
            "manifest": "manifest.json"
        },
        {
            "uid": "com.pluginmaker.simpletext",
            "url": "SimpleText/",
            "manifest": "manifest.json"
        }],

        "instances": [
        {
            "uid": "localeselector",
            "engine": "com.pluginmaker.localeselector",
            "options":
            {
                "horizontalCenter": true,
                "bottom": 100,
                "flagWidth": 150,
                "flagHeight": 100,
                "baseURL": "http://d2z3zwtr25q24l.cloudfront.net/data/samples/common/images/",
                "fileName": "flag-{{locale}}.gif"
            }
        },

        {
            "uid": "text-welcome",
            "engine": "com.pluginmaker.simpletext",
            "options":
            {
                "config":
                {
                    "i18n": true,
                    "value": "pano-welcome",
                    "fontSize": 50,
                    "color": "white",
                    "textAlign": "center"
                },
                "horizontalCenter": true,
                "bottom": 400
            }
        },

        {
            "uid": "text-instructions",
            "engine": "com.pluginmaker.simpletext",
            "options":
            {
                "config":
                {
                    "i18n": true,
                    "value": "pano-instructions",
                    "fontSize": 30,
                    "color": "white",
                    "textAlign": "center"
                },
                "horizontalCenter": true,
                "bottom": 350
            }
        }]
    }
}