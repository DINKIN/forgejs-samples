{
    "tour":
    {
        "uid": "multiple-scenes-tour",
        "name": "Multiple Scenes Tour",
        "slug": "multiple-scenes-tour",
        "description": "This is a tour made with multiple scenes",
        "default": "scene-3",

        "scenes": [
        {
            "uid": "scene-1",
            "name": "First scene",
            "slug": "first-scene",
            "description": "This is the first scene",

            "media":
            {
                "uid": "scene-1-pano-0",
                "type": "image",
                "format": "equi",

                "source": "http://streams.kolor.com/streams/ken/samples/common/panos/01-forest.png"
            }
        },
        {
            "uid": "scene-2",
            "name": "Second scene",
            "slug": "second-scene",
            "description": "This is the second scene",

            "media":
            {
                "uid": "scene-2-pano-0",
                "type": "image",
                "format": "equi",

                "source": "http://streams.kolor.com/streams/ken/samples/common/panos/02-sand.png"
            }
        },
        {
            "uid": "scene-3",
            "name": "Third scene",
            "slug": "third-scene",
            "description": "This is the third and last scene",

            "media":
            {
                "uid": "scene-3-pano-0",
                "type": "image",
                "format": "equi",

                "source": "http://streams.kolor.com/streams/ken/samples/common/panos/03-snow.png"
            }
        }]
    },

    "actions": [
        {
            "uid": "action-prev",
            "target": "viewer.tour",
            "method":
            {
                "name": "previousScene"
            }
        },

        {
            "uid": "action-next",
            "target": "viewer.tour",
            "method":
            {
                "name": "nextScene"
            }
        }
    ],

    "plugins":
    {
        "prefix": "../../plugins/",

        "engines": [
        {
            "uid": "com.pluginmaker.simplebutton",
            "url": "SimpleButton/",
            "manifest": "manifest.json"
        }],

        "instances": [
            {
                "uid": "simplebutton-previous",
                "engine": "com.pluginmaker.simplebutton",

                "options":
                {
                    "left": 5,
                    "verticalCenter": true,

                    "value": "Previous"
                },

                "events":
                {
                    "onClick": ["action-prev"]
                }
            },

            {
                "uid": "simplebutton-next",
                "engine": "com.pluginmaker.simplebutton",

                "options":
                {
                    "right": 5,
                    "verticalCenter": true,

                    "value": "Next"
                },

                "events":
                {
                    "onClick": ["action-next"]
                }
            }
        ]
    }
}