{
    "uid": "view-tour",
    "name": "Change View Tour",
    "slug": "view-tour",
    "description": "This is a demonstration of the view changes",
    "default": "scene-0",

    "scenes": [
    {
        "uid": "scene-0",
        "name": "First scene",
        "slug": "first-scene",
        "description": "This is the first and only scene",

        "view": {
            "type": "gopro"
        },

        "media":
        {
            "uid": "scene-0-pano-0",
            "type": "video",
            "format": "equi",

            "source":
            {
                "files": [
                    "http://streams.ken.com/gopro/omni-highlights/source.02-720p_HD.mp4",
                    "http://streams.ken.com/gopro/omni-highlights/source.03-1080p_HD.mp4",
                    "http://streams.ken.com/gopro/omni-highlights/source.04-1440p_HD.mp4",
                    "http://streams.ken.com/gopro/omni-highlights/source.07-2160p_4K_H264_12M.mp4"
                ]
            },

            "options":
            {
                "autoPlay": true,
                "loop": true,
                "volume": 1
            }
        },

        "camera":
        {
            "pitch":
            {
                "default": -90
            },
            "fov":
            {
                "default": 250
            }
        }
    }],

    "actions":
    [
        {
            "uid": "action-view-recti",
            "target": "viewer.renderer",
            "property":
            {
                "name": "view",
                "value": "rectilinear"
            }
        },

        {
            "uid": "action-camera-fov-recti",
            "target": "viewer.renderer.camera",
            "method":
            {
                "name": "lookAt",
                "args": [null, 0, null, 70]
            }
        },

        {
            "uid": "action-view-gopro",
            "target": "viewer.renderer",
            "property":
            {
                "name": "view",
                "value": "gopro"
            }
        },

        {
            "uid": "action-camera-fov-gopro",
            "target": "viewer.renderer.camera",
            "method":
            {
                "name": "lookAt",
                "args": [null, -90, null, 250]
            }
        }
    ],

    "plugins":
    {
        "engines": [
        {
            "uid": "com.pluginmaker.simplebutton",
            "url": "SimpleButton/",
            "manifest": "manifest.json"
        }],
        "instances": [
        {
            "uid": "simplebutton-recti",
            "engine": "com.pluginmaker.simplebutton",
            "enabled": true,

            "options":
            {
                "left": 0,
                "verticalCenter": true,

                "width": 100,
                "height": 50,

                "value": "Rectilinear"
            },

            "events":
            {
                "onClick": ["action-view-recti", "action-camera-fov-recti", "action-camera-pitch-recti"]
            }
        },
        {
            "uid": "simplebutton-planet",
            "engine": "com.pluginmaker.simplebutton",
            "enabled": true,

            "options":
            {
                "right": 0,
                "verticalCenter": true,

                "width": 100,
                "height": 50,

                "value": "Little Planet"
            },

            "events":
            {
                "onClick": ["action-view-gopro", "action-camera-fov-gopro", "action-camera-pitch-gopro"]
            }
        }]
    }
}