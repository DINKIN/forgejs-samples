{
    "uid": "simpliest-tour",
    "name": "Simpliest Tour",
    "slug": "simpliest-tour",
    "description": "This is the simpliest tour ever",
    "default": "scene-0",

    "scenes": [
    {
        "uid": "scene-0",
        "name": "First scene",
        "slug": "first-scene",
        "description": "This is the first and only scene",

        "view": {
            "type": "gopro"
        },

        "media":
        {
            "uid": "scene-0-pano-0",
            "type": "video",
            "format": "equi",

            "source":
            {
                "files": [
                    "http://streams.ken.com/gopro/omni-highlights/source.02-720p_HD.mp4",
                    "http://streams.ken.com/gopro/omni-highlights/source.03-1080p_HD.mp4",
                    "http://streams.ken.com/gopro/omni-highlights/source.04-1440p_HD.mp4",
                    "http://streams.ken.com/gopro/omni-highlights/source.07-2160p_4K_H264_12M.mp4"
                ]
            },

            "options":
            {
                "autoPlay": true,
                "loop": true,
                "volume": 1
            }
        },

        "camera":
        {
            "pitch":
            {
                "default": -90
            },
            "fov":
            {
                "default": 250
            }
        }
    }],

    "plugins":
    {
        "engines": [
        {
            "uid": "com.pluginmaker.simplebutton",
            "url": "SimpleButton/",
            "manifest": "manifest.json"
        }],
        "instances": [
        {
            "uid": "simplebutton-recti",
            "engine": "com.pluginmaker.simplebutton",
            "enabled": true,

            "options":
            {
                "left": 0,
                "verticalCenter": true,

                "width": 100,
                "height": 50,

                "value": "Rectilinear"
            },

            "events":
            {
                "onClick": [
                {
                    "target": "this.viewer.renderManager",
                    "action": "setView",
                    "params": ["rectilinear"]
                },
                {
                    "target": "this.viewer.renderManager.camera",
                    "action": "fov",
                    "params": 50
                },
                {
                    "target": "this.viewer.renderManager.camera",
                    "action": "pitch",
                    "params": 0
                }]
            }
        },
        {
            "uid": "simplebutton-planet",
            "engine": "com.pluginmaker.simplebutton",
            "enabled": true,

            "options":
            {
                "right": 0,
                "verticalCenter": true,

                "width": 100,
                "height": 50,

                "value": "Little Planet"
            },

            "events":
            {
                "onClick": [
                {
                    "target": "this.viewer.renderManager",
                    "action": "setView",
                    "params": ["gopro"]
                },
                {
                    "target": "this.viewer.renderManager.camera",
                    "action": "fov",
                    "params": 250
                },
                {
                    "target": "this.viewer.renderManager.camera",
                    "action": "pitch",
                    "params": -90
                }]
            }
        }]
    }
}