{
    "uid": "simpliest-tour",
    "name": "Simpliest Tour",
    "slug": "simpliest-tour",
    "description": "This is the simpliest tour ever",
    "defaultLoadUid": "scene-3",

    "scenes": [
    {
        "uid": "scene-1",
        "name": "First scene",
        "slug": "first-scene",
        "description": "This is the first scene",

        "media":
        {
            "uid": "scene-1-pano-0",
            "type": "image",
            "format": "equi",

            "source":
            {
                "url": "./images/01-forest.png"
            }
        }
    },
    {
        "uid": "scene-2",
        "name": "Second scene",
        "slug": "second-scene",
        "description": "This is the second scene",

        "media":
        {
            "uid": "scene-2-pano-0",
            "type": "image",
            "format": "equi",

            "source":
            {
                "url": "./images/02-sand.png"
            }
        }
    },
    {
        "uid": "scene-3",
        "name": "Third scene",
        "slug": "third-scene",
        "description": "This is the third and last scene",

        "media":
        {
            "uid": "scene-3-pano-0",
            "type": "image",
            "format": "equi",

            "source":
            {
                "url": "./images/03-snow.png"
            }
        }
    }],

    "plugins":
    {
        "engines": [
        {
            "uid": "com.pluginmaker.simplebutton",
            "url": "SimpleButton/",
            "manifest": "manifest.json"
        }],
        "instances": [
        {
            "uid": "simplebutton-previous",
            "engine": "com.pluginmaker.simplebutton",
            "enabled": true,

            "options":
            {
                "right": "0",
                "verticalCenter": true,

                "width": 100,
                "height": 50,

                "value": "Previous"
            },

            "events":
            {
                "onClick": [
                {
                    "target": "this.viewer.tour",
                    "action": "previousScene",
                    "params": []
                }]
            }
        },
        {
            "uid": "simplebutton-next",
            "engine": "com.pluginmaker.simplebutton",
            "enabled": true,

            "options":
            {
                "left": "0",
                "verticalCenter": true,

                "width": 100,
                "height": 50,

                "value": "Next"
            },

            "events":
            {
                "onClick": [
                {
                    "target": "this.viewer.tour",
                    "action": "nextScene",
                    "params": []
                }]
            }
        }]
    }
}